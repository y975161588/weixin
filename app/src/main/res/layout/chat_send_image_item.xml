<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingTop="13dp">
    <TextView
        android:id="@+id/tv_chat_send_image_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.2.3.4.5"
        android:textColor="@color/base_color_text_grey"
        android:textSize="12sp"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/iv_chat_send_image_item_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/head"
        />
        <LinearLayout
            android:id="@+id/ll_chat_send_image_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/iv_chat_send_image_item_avatar"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_chat_send_image_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:text="姓名"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/iv_chat_send_image_item_picture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@+id/iv_chat_send_image_item_avatar"
                android:background="@drawable/chat_right_qp"
                android:maxWidth="200dp"
                android:minHeight="150dp"
                android:minWidth="150dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_chat_send_image_item_load"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/ll_chat_send_image_item_content"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tv_chat_send_image_item_readed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/ll_chat_send_image_item_content"
            android:gravity="center"
            android:text="已阅读"
            android:textColor="@color/base_color_text_grey"
            android:textSize="12sp"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/iv_chat_send_image_item_resend"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/ll_chat_send_image_item_content"
            android:src="@drawable/btn_chat_send_failed_resend_selector"
            android:visibility="visible"/>
    </RelativeLayout>

</LinearLayout>