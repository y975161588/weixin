<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_wei_xin_fragment_item_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
    <ImageView
        android:id="@+id/iv_win_xin_fragment_item_picture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/head"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_win_xin_fragment_item_picture"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_win_xin_fragment_item_picture"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_wei_xin_fragment_layout_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="标题"
            android:textColor="@color/base_color_text_black"/>
        <Button
            android:id="@+id/btn_wei_xin_fragment_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_more_vert_black_24px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_win_xin_fragment_item_picture"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/iv_win_xin_fragment_item_picture"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_wei_xin_fragment_item_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="时间"
            android:textColor="@color/base_color_text_grey"/>
        <TextView
            android:id="@+id/tv_wei_xin_fragment_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述"
        />
    </LinearLayout>

</RelativeLayout>