<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingTop="13dp">
    <TextView
        android:id="@+id/tv_chat_receive_image_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.2.3.4.5"
        android:textColor="@color/base_color_text_grey"
        android:textSize="12sp"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/iv_chat_receive_image_item_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/head"
        />

        <ProgressBar
            android:id="@+id/pb_chat_receive_image_item_load"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/ll_chat_receive_item_content"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/iv_chat_receive_image_item_resend"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/ll_chat_receive_item_content"
            android:src="@drawable/btn_chat_send_failed_resend_selector"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/ll_chat_receive_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_chat_receive_image_item_avatar"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_chat_receive_image_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="姓名"
                android:textSize="16sp"
            />
            <ImageView
                android:id="@+id/iv_chat_receive_image_item_picture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/chat_left_qp"
                android:maxWidth="200dp"
                android:minHeight="150dp"
                android:minWidth="150dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:scaleType="fitXY"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>