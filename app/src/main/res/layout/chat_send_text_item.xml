<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingTop="13dp">

    <TextView
        android:id="@+id/tv_chat_send_text_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11.00.02.023"
        android:textColor="@color/base_color_text_grey"
        android:textSize="12sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/iv_chat_send_text_item_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/head"/>

        <LinearLayout
            android:id="@+id/ll_chat_send_text_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/iv_chat_send_text_item_avatar"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_chat_send_text_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:text="姓名"
                android:textSize="16sp"
            />
            <TextView
                android:id="@+id/tv_chat_send_text_item_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/chat_right_qp"
                android:gravity="center"
                android:lineSpacingExtra="6dp"
                android:maxWidth="225dp"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:text="你好xvcb xcv xxc"
                android:textColor="@color/base_color_text_black"
                android:textSize="16sp"
            />

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_chat_send_text_item_resend"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/ll_chat_send_text_item_content"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_chat_send_failed_resend_selector"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tv_chat_send_text_item_readed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/ll_chat_send_text_item_content"
            android:text="已阅读"
            android:textColor="@color/base_color_text_grey"
            android:textSize="12sp"/>
        <ProgressBar
            android:id="@+id/pb_chat_send_text_item_load"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/ll_chat_send_text_item_content"
        />
    </RelativeLayout>


</LinearLayout>